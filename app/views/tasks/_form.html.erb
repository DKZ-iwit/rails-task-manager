<%= form_with(model: @task, url: @task.new_record? ? tasks_path : task_path(@task), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details, class: "form-control", rows: 3 %>
  </div>

  <% unless @task.new_record? %>
    <div class="form-group">
      <%= form.label :completed %>
      <%= form.check_box :completed, class: "form-check-input" %>
    </div>
  <% end %>

  <%= form.submit %>
<% end %>
